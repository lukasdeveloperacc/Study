# Use uv's ARM64 Python base image
FROM ghcr.io/astral-sh/uv:python3.13-bookworm-slim

WORKDIR /app

# Copy uv files
COPY pyproject.toml uv.lock ./

# Install dependencies (including strands-agents)
RUN uv sync --frozen --no-cache

# Copy agent file
COPY custom_langgraph.py agent_core_without_starter_toolkit.py ./

# Expose port
EXPOSE 8080

# Run application
CMD ["uv", "run", "uvicorn", "agent_core_without_starter_toolkit:app", "--host", "0.0.0.0", "--port", "8080"]
